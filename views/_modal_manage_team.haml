%div{ :class => "modal fade", :id => "team#{team.id}ManageModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "team#{team.id}ManageModalLabel", "aria-hidden" => "true" }
  %div{ :class => "modal-dialog" }
    %div{ :class => "modal-content" }
      %div{ :class => "modal-header" }
        %button{ :type => "button", :class => "close", "data-dismiss" => "modal", "aria-label" => "Close" }<
          %span{ "aria-hidden" => "true" } &times;
        %h4{ :class => "modal-title" } Modify Team #{team.id}
      %div{ :class => "modal-body" }
        %form{ :method => "post", :action => "/admin/team/#{team.id}" }
          %div{ :class => "form-group" }
            %label{ :for => "inputTeamName" } Display Name
            %input{ :type => "text", :class => "form-control", :id => "inputDisplayName", :placeholder => "#{team.display}", :name => "name" }
          %div{ :class => "form-group" }
            %label{ :for => "inputTeamSecret" } Password
            %input{ :type => "text", :class => "form-control", :id => "inputTeamSecret", :placeholder => "#{team.password}", :name => "password" }
          %div{ :class => "form-group" }
            %label{ :for => "inputTeamScore" } Score
            %input{ :type => "text", :class => "form-control", :id => "inputTeamScore", :placeholder => "#{team.score}", :name => "score" }
          %div{ :class => "form-group" }
            %label{ :for => "inputLockoutActive" } Lockout
            %select{ :class => "form-control", :id => "inputLockoutActive", :name => "lockout" }
              %option 
              %option enable
              %option disable
          %button{ :type => "submit", :class => "btn btn-default"} Save
