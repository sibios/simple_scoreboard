            %input{ :type => "text", :class => "form-control", :id => "inputFlag", :placeholder => "Enter Flag", :name => "flag" }
          %div{ :class => "form-group" }
            %label{ :for => "inputTeamName" } Team Name
            %input{ :type => "text", :class => "form-control", :id => "inputTeamName", :placeholder => "Enter Team Name", :name => "team_name" }
          %button{ :type => "submit", :class => "btn btn-default"} Submit
