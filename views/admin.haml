%h1 Greetz Admin
%div
  %ul{ :class => "nav nav-tabs", :role => "tablist" }
    %li{ :role => "presentation", :class => "active" }<
      %a{ :href => "#challengesTab", "aria-controls" => "challengesTab", :role => "tab", "data-toggle" => "tab" } Challenges
    %li{ :role => "presentation" }<
      %a{ :href => "#teamsTab", "aria-controls" => "teamsTab", :role => "tab", "data-toggle" => "tab" } Teams
  %div{ :class => "tab-content" }
    %div{ :role => "tabpanel", :class => "tab-pane active", :id => "challengesTab" }
      //flags go here
      - flags.each do |flag|
        - if flag.active
          %button{ :type => "button", :class => "btn btn-success btn-lg span12", "data-toggle" => "modal", "data-target" => "#flag#{flag.id}ManageModal", :id => "flag#{flag.id}-manage-button" } #{flag.name}
        - else
          %button{ :type => "button", :class => "btn btn-danger btn-lg span12", "data-toggle" => "modal", "data-target" => "#flag#{flag.id}ManageModal", :id => "flag#{flag.id}-manage-button" } #{flag.name}
          
    %div{ :role => "tabpanel", :class => "tab-pane", :id => "teamsTab" }
      //teams go here
      - teams.each do |team|
        - next if team.name == "admin"
        - if team.locked
          %button{ :type => "button", :class => "btn btn-danger btn-lg span12", "data-toggle" => "modal", "data-target" => "#team#{team.id}ManageModal", :id => "team#{team.id}-manage-button" }<
            &= team.display
        - else
          %button{ :type => "button", :class => "btn btn-primary btn-lg span12", "data-toggle" => "modal", "data-target" => "#team#{team.id}ManageModal", :id => "team#{team.id}-manage-button" }<
            &= team.display

- flags.each do |flag|
  = haml :_modal_manage_challenge, :locals => { :flag => flag }

- teams.each do |team|
  = haml :_modal_manage_team, :locals => { :team => team }
