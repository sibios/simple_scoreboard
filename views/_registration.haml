%div{ :class => "modal fade", :id => "registrationModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "registrationModalLabel", "aria-hidden" => "true" }
  %div{ :class => "modal-dialog" }
    %div{ :class => "modal-content" }
      %div{ :class => "modal-header" }
        %button{ :type => "button", :class => "close", "data-dismiss" => "modal", "aria-label" => "Close" }<
          %span{ "aria-hidden" => "true" } &times;
        %h4{ :class => "modal-title" } Register a Team
      %div{ :class => "modal-body" }
        %form{ :method => "post", :action => "/register" }
          %div{ :class => "form-group" }
            %label{ :for => "inputTeamName" } Team Name
            %input{ :type => "text", :class => "form-control", :id => "inputTeamName", :placeholder => "Enter Team Name", :name => "team_name" }
          %div{ :class => "form-group" }
            %label{ :for => "inputPassword" } Password
            %input{ :type => "password", :class => "form-control", :id => "inputPassword", :placeholder => "Team Password", :name => "password" }
            %label{ :for => "inputPasswordConfirm" } Re-type Password
            %input{ :type => "password", :class => "form-control", :id => "inputPasswordConfirm", :placeholder => "Confirm your Password", :name => "password_confirm" }
          %button{ :type => "submit", :class => "btn btn-default"} Register
